[Unit]
Description=Promtail service
After=network.target

[Service]
Type=simple
{% if promtail_runtime_mode == "acl" %}
User=promtail
{% elif promtail_runtime_mode == "root" %}
User=root
{% endif %}
ExecStart=/usr/bin/promtail -config.file /etc/promtail/config.yml

TimeoutSec = 60
Restart = on-failure
RestartSec = 2

[Install]
